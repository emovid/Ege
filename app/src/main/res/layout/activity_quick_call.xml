<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="0, 1"
    android:touchscreenBlocksFocus="false"
    android:background="#ffffff">
    <android.support.v7.widget.Toolbar
        android:layout_height="?attr/actionBarSize"
        android:background="#00A2E9"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:layout_gravity="fill_horizontal"
        android:id="@+id/my_toolbar" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1.0">

        <com.emovid.ege.view.CallButton
            android:id="@+id/button_police"
            android:layout_column="0"
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp"
            app:icon_src="@mipmap/ic_police"
            app:background_color="#587498"
            app:shade_color="#4fff4f"
            app:phone="110"
            app:shade_alpha="55"
            app:text="Police"/>

        <com.emovid.ege.view.CallButton
            android:id="@+id/button_fire"
            android:layout_column="1"
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:paddingLeft="5dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp"
            android:layout_height="match_parent"
            app:icon_src="@mipmap/ic_fire"
            app:background_color="#b93029"
            app:phone="113"
            app:shade_color="#4fff4f"
            app:shade_alpha="55"
            app:text="Fire"/>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1.0" >

        <com.emovid.ege.view.CallButton
            android:id="@+id/button_ambulance"
            android:layout_column="0"
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp"
            android:layout_height="match_parent"
            app:icon_src="@mipmap/ic_ambulance"
            app:background_color="#587058"
            app:shade_color="#4fff4f"
            app:phone="118"
            app:shade_alpha="55"
            app:text="Ambulance"/>

        <com.emovid.ege.view.CallButton
            android:id="@+id/button_sar"
            android:layout_column="1"
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:paddingLeft="5dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp"
            android:layout_height="match_parent"
            app:icon_src="@mipmap/ic_sar"
            app:background_color="#FFD800"
            app:phone="115"
            app:shade_color="#4fff4f"
            app:shade_alpha="55"
            app:text="SAR"/>
    </TableRow>
</TableLayout>